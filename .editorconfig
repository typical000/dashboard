# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file and trimming trailing whitespace
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation. LF, 4 space indents, utf-8 charset
# Set default charset
[*.{js,jsx,ts,tsx,json,html,css,gql}]
charset = utf-8
indent_style = space
indent_size = 2